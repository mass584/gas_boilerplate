{
  "name": "gas_boilerplate",
  "version": "1.0.0",
  "author": "yoshimitsu.masugata <msgtysmt@gmail.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.spec.ts"
    ]
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/cpx": "^1.5.1",
    "@types/dotenv-webpack": "^1.8.0",
    "@types/eslint": "^7.2.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/google-apps-script": "^1.0.16",
    "@types/jest": "^26.0.15",
    "@types/moment": "^2.13.0",
    "@types/prettier": "^2.1.0",
    "@types/rimraf": "^3.0.0",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/webpack": "^4.41.22",
    "@types/workbox-webpack-plugin": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "@webpack-cli/init": "0.2.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "cpx": "^1.5.0",
    "dotenv-webpack": "^2.0.0",
    "es3ify-webpack-plugin": "^0.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gas-webpack-plugin": "^1.1.0",
    "jest": "^26.6.3",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "quicktype": "^15.0.258",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^4.1.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "scripts": {
    "build:dev": "run-s build:json_schema build:appsscript build:dev:webpack",
    "build:prod": "run-s build:json_schema build:appsscript build:prod:webpack",
    "build:json_schema": "quicktype src/doPost/requestBody.ts -o src/doPost/schema.json --lang schema",
    "build:appsscript": "cpx \"src/appsscript.json\" dist/",
    "build:dev:webpack": "webpack --config webpack.dev.js",
    "build:prod:webpack": "webpack --config webpack.prod.js",
    "clean": "run-p clean:*",
    "clean:copy": "run-p clean:copy:*",
    "clean:copy:appsscript.json": "rimraf dist/appsscript.json",
    "clean:webpack": "rimraf dist/*.js",
    "fix": "yarn eslint --fix src/**/* ",
    "lint": "yarn eslint src/**/*",
    "test": "yarn jest"
  },
  "dependencies": {
    "ajv": "^6.12.5",
    "moment": "^2.29.0"
  }
}
